{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "./dist",
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "rootDir": "./src",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}