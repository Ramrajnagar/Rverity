{
    "manifest_version": 3,
    "name": "NeuroSync AI",
    "version": "1.0.0",
    "description": "Your AI-powered browsing memory. Automatically capture and recall your web context.",
    "permissions": [
        "storage",
        "tabs",
        "history",
        "bookmarks",
        "activeTab"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "http://localhost:3001/*"
    ],
    "background": {
        "service_worker": "dist/background/service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "dist/content/content-script.js"
            ],
            "css": [
                "dist/content/styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "options.html",
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+K",
                "mac": "Command+Shift+K"
            },
            "description": "Open NeuroSync popup"
        },
        "search": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "Command+Shift+F"
            },
            "description": "Search memories"
        },
        "capture_selection": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Capture selected text"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}